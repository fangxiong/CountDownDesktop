<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_171925">

    <RelativeLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_55">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"
            android:onClick="onClick"
            android:src="@drawable/common_iv_back_white" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:onClick="onClick"
            android:src="@drawable/widget_make_save_btn" />

        <ImageView
            android:id="@+id/iv_change_bg"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_toStartOf="@id/iv_save"
            android:onClick="onClick"
            android:src="@drawable/widget_make_bg_change_btn" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleView"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <com.fax.showdt.view.sticker.StickerView
            android:id="@+id/sticker_view"
            android:layout_width="330dp"
            android:layout_height="165dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_2"
            app:borderColor="@color/white"
            app:showBorder="true"
            app:showIcons="true">

            <ImageView
                android:id="@+id/iv_select_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:scaleType="centerCrop" />

        </com.fax.showdt.view.sticker.StickerView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:id="@+id/baseLine"
            android:layout_width="@dimen/margin_1"
            android:layout_height="@dimen/margin_1"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_46"
            android:layout_toStartOf="@id/tv_sticker"
            android:drawableTop="@drawable/diy_widget_make_text_icon"
            android:gravity="center"
            android:onClick="onClick"
            android:text="文字"
            android:textColor="@color/c_7C7C7C"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_sticker"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_23"
            android:layout_toStartOf="@id/baseLine"
            android:drawableTop="@drawable/diy_widget_make_sticker_icon"
            android:gravity="center"
            android:onClick="onClick"
            android:text="贴纸"
            android:textColor="@color/c_7C7C7C"
            android:textSize="@dimen/textSize_14" />


        <TextView
            android:id="@+id/tv_shape"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_23"
            android:layout_toEndOf="@id/baseLine"
            android:drawableTop="@drawable/diy_widget_make_shape_icon"
            android:gravity="center"
            android:onClick="onClick"
            android:text="矢量图"
            android:textColor="@color/c_7C7C7C"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_46"
            android:layout_toEndOf="@id/tv_shape"
            android:drawableTop="@drawable/diy_widget_make_progress_bar_icon"
            android:gravity="center"
            android:onClick="onClick"
            android:text="进度条"
            android:textColor="@color/c_7C7C7C"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"/>

    </RelativeLayout>