<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/c_222222"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50">

        <ImageView
            android:id="@+id/iv_back"
            android:onClick="onClick"
            android:src="@drawable/common_iv_back_white"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_25"
            android:text="@string/setting"
            android:layout_toEndOf="@id/iv_back"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lock_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_lock_switch"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_btn"
            android:layout_width="@dimen/margin_45"
            android:layout_height="@dimen/margin_28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_50"
            android:layout_centerVertical="true"
            app:kswThumbColor="@color/c_FCF43C"
            app:kswBackColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_check_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_check_version"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_50"
            android:layout_centerVertical="true"
            tools:text="v1.0.0"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_help"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_help"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_share"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_market_scoring"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_market_scoring"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>
    </RelativeLayout>


</LinearLayout>