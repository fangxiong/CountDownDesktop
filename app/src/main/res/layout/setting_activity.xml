<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_171925">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50">

        <ImageView
            android:id="@+id/iv_back"
            android:onClick="onClick"
            android:src="@drawable/common_iv_back_white"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_25"
            android:text="@string/setting"
            android:layout_toEndOf="@id/iv_back"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting01"
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽插件点击更换"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_btn"
            android:layout_width="@dimen/margin_45"
            android:layout_height="@dimen/margin_28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_centerVertical="true"
            app:kswThumbColor="@color/c_FCF43C"
            app:kswBackColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_open_permission"
        android:layout_below="@id/rl_setting01"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:onClick="onClick"
        android:background="@color/c_191930">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启权限防插件刷新停止"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/common_iv_go_icon"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_privacy"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_13"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_agreement"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>