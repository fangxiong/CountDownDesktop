<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10"
            android:src="@drawable/widget_click_setting_action" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_5"
            android:gravity="center"
            android:text="@string/widget_click"
            android:textColor="@color/c_A0A0A0"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:id="@+id/tv_click_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:background="@color/c_F7F6F6"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/c_A0A0A0"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_click_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10"
            android:src="@drawable/widget_click_setting_type" />

        <TextView
            android:id="@+id/tv_click_type_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_5"
            android:gravity="center"
            android:text="@string/widget_click"
            android:textColor="@color/c_A0A0A0"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:id="@+id/tv_click_type_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:background="@color/c_F7F6F6"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/c_A0A0A0"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

</LinearLayout>