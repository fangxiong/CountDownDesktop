<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_240"
    android:layout_height="420dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_16"
        android:text="用户协议及隐私条款"
        android:textColor="@color/c_282828"
        android:textSize="@dimen/margin_16"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们依据最新的法律，向您说明魔秀插件软件的隐私政策，特向您推送本提示。请您阅读并充分理解相关条款。"
                android:textColor="@color/c_282828"
                android:textSize="@dimen/margin_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="我们承诺："
                android:textColor="@color/c_282828"
                android:textSize="@dimen/margin_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_privacy_personal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_16"
                    android:text="我们严格按照《网络安全法》、《信息网络传播保护条例》等保护您的个人信息；"
                    android:textColor="@color/c_282828"
                    android:textSize="@dimen/margin_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iv_privacy_protect" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_16"
                    android:text="如果未经您的授权，我们不会使用您的个人信息用于您未授权的其他途径或目的。"
                    android:textColor="@color/c_282828"
                    android:textSize="@dimen/margin_13" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:text="您点击“同意”，即表示您已阅读并同意更新后的《服务协议》及《隐私条款》"
        android:textColor="@color/c_282828"
        android:textSize="@dimen/margin_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_service_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="查看完整版《服务协议》"
            android:textColor="@color/c_282828"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/tv_privacy_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="及《隐私条款》"
            android:textColor="@color/c_282828"
            android:textSize="@dimen/margin_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d8d8d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_not_allow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不同意"
            android:textColor="@color/c_9a9a9a"
            android:textSize="@dimen/margin_18" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#d8d8d8" />

        <TextView
            android:id="@+id/tv_allow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/c_2585ff"
            android:textSize="@dimen/margin_18" />

    </LinearLayout>
</LinearLayout>


