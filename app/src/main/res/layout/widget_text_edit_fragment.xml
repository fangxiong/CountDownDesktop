<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_tab_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40">

        <ImageView
            android:id="@+id/iv_keyboard"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="@drawable/widget_text_edit_tab_selected_bg"
            android:src="@drawable/widget_text_edit_keyboard_btn"/>

        <ImageView
            android:id="@+id/iv_font"
            android:layout_toEndOf="@id/iv_keyboard"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="@drawable/widget_text_edit_tab_selected_bg"
            android:src="@drawable/widget_text_edit_font_btn"/>

        <ImageView
            android:id="@+id/iv_color"
            android:layout_toEndOf="@id/iv_font"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="@drawable/widget_text_edit_tab_selected_bg"
            android:src="@drawable/widget_text_color_btn"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_toEndOf="@id/iv_color"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="@drawable/widget_text_edit_tab_selected_bg"
            android:src="@drawable/widget_text_edit_add_btn"/>

        <ImageView
            android:id="@+id/iv_consume"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_text_edit_consume_btn" />

    </RelativeLayout>

    <View
        android:layout_below="@id/rl_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_F1F1F1"/>

    <FrameLayout
        android:id="@+id/fl_text_edit_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>